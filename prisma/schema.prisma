generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  role      UserRole @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Company {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  contactInfo String
  phoneNumber String
  location    String
  products    Product[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("companies")
}

model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  description String?
  type        ProductType
  segment     CategorySegment @default(RESIDENTIAL)
  products    Product[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("categories")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       Float
  tags        String[]
  type        ProductType
  categoryId  String   @db.ObjectId
  category    Category @relation(fields: [categoryId], references: [id])
  companyId   String   @db.ObjectId
  company     Company  @relation(fields: [companyId], references: [id])
  images      String[]
  inStock     Boolean  @default(true)
  stockStatus StockStatus @default(AVAILABLE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("products")
}

enum ProductType {
  CAMERA
  ALARM
}

enum StockStatus {
  AVAILABLE
  OUT_OF_STOCK
}

enum CategorySegment {
  RESIDENTIAL
  COMPANY
}

enum UserRole {
  ADMIN
  USER
}
